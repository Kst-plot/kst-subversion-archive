            <term><menuchoice>
                <shortcut><keycombo><keycap>PgDown</keycap></keycombo></shortcut>
                <guimenu>File</guimenu><guimenuitem>Next</guimenuitem>
            </menuchoice></term>
            <listitem><para><action>Display the next image of the current list.</action></para></listitem>
        </varlistentry>

